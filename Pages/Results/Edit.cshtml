@page
@model OnlineTestBooking_EF.Pages.Results.EditModel

@{
    ViewData["Title"] = "Edit";
}
<!--Use text align center to both h1 and h4-->
<h1 style="text-align:center; ">Edit</h1>

<h4 style="text-align:center; ">Result</h4>
<hr />
<div class="row" >
    <div class="col-md-4" style="background-color:blanchedalmond;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Result.ID" />
            <div class="form-group">
                <label asp-for="Result.RegistrationID" class="control-label"></label>
                <select asp-for="Result.RegistrationID" class="form-control" asp-items="ViewBag.RegistrationID"></select>
                <span asp-validation-for="Result.RegistrationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Result.BookingID" class="control-label"></label>
                <input asp-for="Result.BookingID" class="form-control" />
                <span asp-validation-for="Result.BookingID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Result.Score" class="control-label"></label>
                <input asp-for="Result.Score" class="form-control" />
                <span asp-validation-for="Result.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

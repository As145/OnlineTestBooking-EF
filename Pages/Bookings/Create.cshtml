@page
@model OnlineTestBooking_EF.Pages.Bookings.CreateModel

@{
    ViewData["Title"] = "Create";
}
<!--Use text align center to both h1 and h4-->
<h1 style="text-align:center; ">Create</h1>

<h4 style="text-align:center; ">Booking</h4>
<hr />


<div class="row">
    <!--Give background color to table coloumns-->
    <div class="col-md-4" style="background-color:blanchedalmond;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.BookingDate" class="control-label"></label>
                <input asp-for="Booking.BookingDate" class="form-control" />
                <span asp-validation-for="Booking.BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Location" class="control-label"></label>
                <input asp-for="Booking.Location" class="form-control" />
                <span asp-validation-for="Booking.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.RegistrationID" class="control-label"></label>
                <select asp-for="Booking.RegistrationID" class="form-control" asp-items="ViewBag.RegistrationID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Fee" class="control-label"></label>
                <input asp-for="Booking.Fee" class="form-control" />
                <span asp-validation-for="Booking.Fee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model OnlineTestBooking_EF.Pages.Registrations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<!--Use text align center to both h1 and h4-->
<h1 style="text-align:center; ">Edit</h1>

<h4 style="text-align:center; ">Registration</h4>
<hr />
<div class="row">
    <div class="col-md-4" style="background-color:blanchedalmond;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Registration.ID" />
            <div class="form-group">
                <label asp-for="Registration.FirstName" class="control-label"></label>
                <input asp-for="Registration.FirstName" class="form-control" />
                <span asp-validation-for="Registration.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.LastName" class="control-label"></label>
                <input asp-for="Registration.LastName" class="form-control" />
                <span asp-validation-for="Registration.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.DOB" class="control-label"></label>
                <input asp-for="Registration.DOB" class="form-control" />
                <span asp-validation-for="Registration.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.Contact" class="control-label"></label>
                <input asp-for="Registration.Contact" class="form-control" />
                <span asp-validation-for="Registration.Contact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.PassportNumber" class="control-label"></label>
                <input asp-for="Registration.PassportNumber" class="form-control" />
                <span asp-validation-for="Registration.PassportNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.TestType" class="control-label"></label>
                <input asp-for="Registration.TestType" class="form-control" />
                <span asp-validation-for="Registration.TestType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
